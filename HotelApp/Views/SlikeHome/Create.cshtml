@model HotelApp.Models.Slika
@{
    ViewBag.Title = "Upload slike";
}

<h2>Upload Slike</h2>
<div class="well">
    @using (Html.BeginForm("Create", "SlikeHome", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <div class="form-group">
                @Html.LabelFor(m => Model.Opis, new { @class = "control-label col-sm-3" })
                <div class="col-sm-5">
                    @Html.TextBoxFor(m => m.Opis, new { @class = "form-control required" })
                    @Html.ValidationMessageFor(model => model.Opis)
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Izaberi sliku/e", new { @class = "control-label col-sm-3" })
                <div class="col-sm-5">
                    <input type="file" name="files"
                           multiple="multiple" accept=".jpg, .png, .gif" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-5 col-sm-offset-3">
                    <input type="submit" value="Snimi" class="btn btn-primary boja" />
                    <div style="color:red">
                        @ViewBag.error
                    </div>
                </div>
            </div>
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<style type="text/css">
    .boja {
        background: #B22222;
    }
</style>
