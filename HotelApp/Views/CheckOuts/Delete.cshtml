<h3>Da li ste sigurni da želite izbrisati ovaj check out?</h3>
<div>
    <h4>Check out</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.DatumOdjave)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DatumOdjave)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DodatniTrosak)
        </dt>

        <dd>
