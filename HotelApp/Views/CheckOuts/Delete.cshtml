        <div class="form-actions no-color">
            <input type="submit" value="Izbriši" class="btn btn-default boja" /> |
            <button type="button" class="btn btn-default boja" onclick="location.href='@Url.Action("Index", "CheckOuts")'">Vrati se nazad</button>
