@model HotelApp.Models.Kontakt

@{
    ViewBag.Title = "Izbriši";
}

<h2>Izbriši</h2>
    <h3>Da li ste sigurni da ovo želite izbrisati?</h3>
    <div>
        <h4>Kontakt</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Ime)
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.Ime)
            </dd>
    
            <dt>
                @Html.DisplayNameFor(model => model.Email)
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>
    
            <dt>
                @Html.DisplayNameFor(model => model.Poruka)
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.Poruka)
            </dd>
    
            <dt>
                @Html.DisplayNameFor(model => model.Telefon)
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.Telefon)
            </dd>
    
        </dl>
    
        @using (Html.BeginForm()) {
            @Html.AntiForgeryToken()
    
            <div class="form-actions no-color">
                <input type="submit" value="Izbriši" class="btn btn-default boja" /> |
                <button type="button" class="btn btn-default boja" onclick="location.href='@Url.Action("Index", "Kontakt")'">Vrati se nazad</button>
            </div>
        }
    </div>

<style type="text/css">
    .boja {
        background-color: #B22222;
        color: white;
    }
</style>
