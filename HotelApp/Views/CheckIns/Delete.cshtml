@model HotelApp.Models.CheckIn

@{
    ViewBag.Title = "Izbriši";
}

<h2>Izbriši</h2>

<h3>Da li ste sigurni da želite izbrisati ovaj check in?</h3>
<div>
    <h4>Check in</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.DatumPrijave)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DatumPrijave)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Zaduzenja.VrstaZaduzenja)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Zaduzenja.VrstaZaduzenja)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Izbriši" class="btn btn-default boja slova" /> |
            <button type="button" class="btn btn-default boja slova" onclick="location.href='@Url.Action("Index", "CheckIns")'">Vrati se nazad</button>
        </div>
    }
</div>

<style type="text/css">
    .slova{
        color: white;
    }
</style>
